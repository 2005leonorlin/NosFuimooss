                <!-- Fecha de reserva -->
                <TextView
                    android:id="@+id/tv_fecha_reserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reservado el 15 de mayo de 2024 a las 14:30"
